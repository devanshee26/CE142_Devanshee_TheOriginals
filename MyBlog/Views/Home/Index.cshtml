@model IEnumerable<MyBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ( Model.Count() == 0)
{
    <div class="container-fluid">
        <div class="card alert alert-dark">
            <h3>Go To <b>Elites</b> section</h3>
            <p>Follow The Elite Authors To Get The Posts!</p>
        </div>
    </div>
   
}



<div class="card-columns">
    @foreach (var item in Model)
    {



        <!-- Bootstrap card -->
        <div class="card col-md-9">
            <br />
            <p class="card-text">
                <b> @Html.DisplayFor(modelItem => item.User.UserName)</b>
                <img class="card-img-top" src="@("../wwwroot/Profile/"+@item.User.ImagePathName)" style="height:28px; width:28px;" alt="Card image cap">
            </p>

            <img class="card-img-top" src="@("../wwwroot/Images/"+@item.ImagePathName)" style="margin-top:5%;" alt="Card image cap">

            <!-- Card Body -->
            <div class="card-body">
                <!-- Card Title -->
                <h3 class="card-title">  @Html.DisplayFor(modelItem => item.Title)</h3>

                <!-- Card Text -->
                <p class="card-text" style="width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; padding-left:8px; padding-bottom:5px; margin: 0; background: white; ">@Html.DisplayFor(modelItem => item.Content)</p>

                <!-- Card Action -->

                <a asp-controller="BlogPosts" asp-action="ReadMore" asp-route-id="@item.BlogPostId" class="btn btn-outline-success btn-sm">Read More</a>

            </div>
        </div>

        <!--cards ends-->




    }
</div>

